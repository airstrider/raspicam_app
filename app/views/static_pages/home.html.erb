<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/photos' %>
			</section>
			<section>
				<%= render 'shared/stats' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="span8">
			<h3>Micropost Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<div class="center hero-unit">
		<h1>Scenery around you</h1>		
		<h2>
			This is a protptype application to view the scenery around you 
			<p>with using <a href="http://www.raspberrypi.org/?s=camera">Raspberry Pi and its Camera module</a>. 
		</h2>

		<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>

	<%= link_to image_tag("RyanKim.jpeg", alt: "Ryan Jung Kim"), 'https://www.github.com/airstrider' %>
<% end %>
